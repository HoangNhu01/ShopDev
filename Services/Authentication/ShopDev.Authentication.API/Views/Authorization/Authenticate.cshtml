@model ShopDev.Authentication.API.Models.AuthenticateModel
<div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/images/b4.svg');">
        <div class="centered-image">
            <img src="/images/b-in.svg" alt="">
            <p class="centered-text">Giao diện trực quan</p>
        </div>
        <div class="bottom-image">
            <img src="~/images/b-bottom.svg" alt="">
        </div>
    </div>
    <div class="contents order-2 order-md-1">

        <div class="container">
            <div class="row align-items-center justify-content-center">
                <div class="col-md-7">
                    <div class="logo-login">
                        <img src="~/images/logo-meey-finance.svg" alt="">
                    </div>
                    <p class="title-login">Đăng nhập</p>
                    <p class="subtitle-login">Đăng nhập thông tin tài khoản của bạn</p>
                    <form action="#" method="post">
                        <div class="form-group first" style="margin-bottom: 1rem;">
                            <label for="username" class="login-label">Tên đăng nhập</label>
                            <input type="text" class="form-control" placeholder="Nhập tên đăng nhập" id="username" name="username" value="@Model?.Username" autocomplete="username">
                            @if (@ViewBag.UsernameError is not null)
                            {
                                <p style="color: red;">@ViewBag.UsernameError</p>
                            }
                        </div>
                        <div class="form-group last mb-3">
                            <label for="password" class="login-label">Mật khẩu</label>
                            <div class="input-group">
                                <input type="password" class="form-control" placeholder="Nhập mật khẩu" id="password" name="password" value="@Model?.Password" autocomplete="current-password">
                                <div class="input-group-append">
                                    <span class="password-toggle-icon " id="show-hide-password">
                                        <iconify-icon icon="clarity:eye-line" width="20" height="20"></iconify-icon>
                                    </span>
                                </div>
                            </div>

                            @if (@ViewBag.PasswordError is not null)
                            {
                                <p style="color: red;">@ViewBag.PasswordError</p>
                            }
                        </div>

                        <input type="hidden" class="form-control" name="ReturnUrl" value="@Model?.ReturnUrl" />
                        <div class="d-flex align-items-center" style="justify-content: space-between; align-content: space-between; margin-bottom: 24px;">
                            <label class="control control--checkbox mb-0">
                                <span class="caption">Ghi nhớ mật khẩu lần sau</span>
                                <input type="checkbox" checked="checked" />
                                <div class="control__indicator"></div>
                            </label>
                            <span class="forgot-password-text"><a href="" style="text-decoration: none; color: #175CD3;">Quên mật khẩu</a></span>
                        </div>
                        @if (@ViewBag.ErrorLogin is not null)
                        {
                            <p style="color: red;">@ViewBag.ErrorLogin</p>
                        }
                        <input type="submit" value="Đăng nhập" class="btn btn-block btn-login">
                    </form>
                    <button class="btn btn-block btn-support" style="display: flex; align-items: center; justify-content: center;">
                        <svg xmlns="http://www.w3.org/2000/svg" width="25" height="24" viewBox="0 0 25 24" fill="none">
                            <path fill-rule="evenodd" clip-rule="evenodd" d="M12.5 3C7.52944 3 3.5 7.02944 3.5 12C3.5 16.9706 7.52944 21 12.5 21C17.4706 21 21.5 16.9706 21.5 12C21.5 7.02944 17.4706 3 12.5 3ZM11.0951 6.94525C11.7279 6.68314 12.4242 6.61456 13.096 6.74818C13.7677 6.8818 14.3848 7.21163 14.8691 7.69594C15.3534 8.18025 15.6832 8.7973 15.8169 9.46906C15.9505 10.1408 15.8819 10.8371 15.6198 11.4699C15.3577 12.1027 14.9138 12.6435 14.3443 13.0241C14.2957 13.0566 14.2463 13.0878 14.1963 13.1177C13.8957 13.2972 13.6305 13.5019 13.448 13.7174C13.2689 13.929 13.2023 14.11 13.2023 14.2694C13.2023 14.4075 13.0904 14.5194 12.9523 14.5194H11.8884C11.7504 14.5194 11.6384 14.4075 11.6384 14.2694C11.6384 13.6311 11.9174 13.105 12.2543 12.707C12.5882 12.3126 13.0104 12.0044 13.3943 11.7751C13.4217 11.7587 13.4488 11.7416 13.4755 11.7237C13.7878 11.515 14.0312 11.2184 14.1749 10.8714C14.3187 10.5244 14.3563 10.1426 14.283 9.77416C14.2097 9.40577 14.0289 9.06738 13.7633 8.80178C13.4977 8.53618 13.1593 8.35531 12.7909 8.28203C12.4225 8.20875 12.0406 8.24636 11.6936 8.3901C11.3892 8.51618 11.1032 8.74761 10.8939 9.02973C10.684 9.31271 10.5639 9.62906 10.5639 9.91874C10.5639 10.3506 10.2138 10.7007 9.78195 10.7007C9.35009 10.7007 9 10.3506 9 9.91874C9 8.57111 10.0073 7.39585 11.0951 6.94525ZM11.3479 16.9317C11.3479 16.3417 11.8263 15.8634 12.4163 15.8634C13.0064 15.8634 13.4847 16.3417 13.4847 16.9317C13.4847 17.5218 13.0064 18.0001 12.4163 18.0001C11.8263 18.0001 11.3479 17.5218 11.3479 16.9317Z" fill="#175CD3" />
                        </svg>
                        <p style="margin: 0; color: #344054; font-family: 'Inter'; font-size: 14px; font-weight: 400; line-height: 20px; margin-left: 12px">
                            Cần hỗ trợ?<span style="font-weight: 600;"> Hotline </span>
                        </p>
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>